<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/circle_shape" />

    <!-- Tiêu đề chat -->
    <TextView
        android:id="@+id/tvChatTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Group A"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
        android:paddingStart="12dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Tin nhắn cuối cùng -->
    <TextView
        android:id="@+id/tvLatestMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hey someone wants to hang out?"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/tvChatTitle"
        app:layout_constraintTop_toBottomOf="@id/tvChatTitle"
        app:layout_constraintEnd_toStartOf="@id/tvTimestamp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Thời gian tin nhắn -->
    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvChatTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
